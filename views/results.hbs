
<div class="container">
	{{#each articleArray}}
	<div class="row" id="row-{{@index}}" style="padding: 10px">
		<div class="col-12">
			<div class="card bg-dark text-white">
				<div class="card-body">
					<a href="{{link}}" id="link-{{@index}}">
						<h5 class="card-title text-white" id="title-{{@index}}">{{title}}</h5>
					</a>
					{{#if summary}}
			    	<p class="card-text" id="summary-{{@index}}">{{summary}}</p>
			    	{{/if}}
			    	{{#if photoURL}}
			    	<p>
			    	<img src="{{photoURL}}" id="photoURL-{{@index}}">
			    	</p>
		    		{{/if}}
		    		<p>
			    	{{#if notes}}
						<button type="button" id="notes-{{@index}}" class="btn btn-default">view notes</button>
			    	{{/if}}
			    	<button type="button" data-article-id="{{_id}}"id="save-article-{{@index}}" class="btn btn-primary save-article">save article</button>
			    	</p>
		  		</div>
			</div>
		</div>
	</div>
	{{/each}}
</div>





